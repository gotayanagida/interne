<script type="text/javascript">
$(window).on('resize', function(){
  var w = $(window).width();
  if(w<=768){
    $('.left-sidebar').css('display', "none");
  }
  else{
    $('.left-sidebar').css('display','');
  }
});
$(document).ready(function(){
  var w = screen.width;
  if(w<=768){
    $('.left-sidebar').css('display', "none");
