<!DOCTYPE html>
<html>
  <head>
    <title>Kintarou</title>
    <%= csrf_meta_tags %>
    
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script src="https://fastcdn.org/FlowType.JS/1.1/flowtype.js"></script>
    <% if notice %>
    <script type="text/javascript">
      $(document).ready(function(){
		  $('.messagebox').fadeIn(1000).delay(2000).fadeOut(2000);
		    // メッセージ内の×ボタンクリックでメッセージを非表示にする
		    $('.messagebox .close').on('click', function() {
		        $(this).parents('.messagebox').hide();
		    });
		});
    </script>
    <% end %>
  </head>
  <% if notice %>
      <div class="alert alert-info messagebox">
	    <button type="button" class="close" data-dismiss="alert">×</button>
	    <strong><%= notice %></strong>
	　</div>
    <% elsif alert %>
      <p class="alert"><%= alert %></p>
    <% end %>
  <body>
    <% if user_signed_in? %>
    <div class="ui grid">
      <div class="row main-header">
          <%= render 'layouts/header' %>
      </div>
    </div>
      <% if current_company != nil %>
        <div class="left-sidebar" style="width:210px;height:100%;float:left;">
          <%= render 'layouts/sidebar' %>
        </div>
        <div class="main_contents">
          <%= render 'layouts/header' %>
          <div class="ui grid padded stackable">
            <div class="row">
              <div class="sixteen wide column">
                <%= yield %>
              </div>
            </div>
          </div>  
        </div>
      <% else %>
        <%= yield %><!--for no company page -->
      <% end %>
    <% else %>
      <%= yield %><!--for login page -->
    <% end %>
  </body>
</html>
