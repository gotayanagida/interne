<script type="text/javascript">
	$(window).on('resize', function(){
	  var w = $(window).width()
	  if(w<=768){
	    $('.screen-header').css('display', "none");
	  }
	  else{
	    $('.screen-header').css('display','');
	  }
	});
	$(document).ready(function(){
	  var w = screen.width;
	  if(w<=768){
	    $('.screen-header').css('display', "none");
	  }
	  else{
	    $('.screen-header').css('display','');
	  }
	});

</script>
<div id="main_contents">
<div class="header ui padded grid">
  <div class="row main-header screen-header">
		<!-- for pc　-->
	  <div class="ten wide column">
			<h3><%= "ダッシュボード"%><span>　　　　　　　　　　　　　　　（開発用メモ：<%= current_user.name %>、<%= current_user.employment_status ? "インターン生" : "社員" %>）</span></h3>
	  </div>
	  <div class="six wide column">
			<div class="ui dropdown">
				やることリスト
				<div class="menu">
					<% todo_users.each do |todo_user| %>
				    <%= link_to todo_path(todo_user.todo), class:"item future" do %>
					    <i class="large info circle middle aligned icon"></i>
					    <div class="content">
					      <div class="header"><%= todo_user.todo.body %></div>
					      <div class="description">
						      <% todo_time = Time.now.to_time.to_i - todo_user.todo.created_at.to_time.to_i %>
						      <%= (Time.parse("1/1") + todo_time).strftime("%-H時間%-M分%-S秒前") %>
					      </div>
					    </div>
				    <% end %>
				  <% end %>
				</div>
		  </div>
			<div class="ui dropdown">
				お知らせ
				<div class="menu">
					<% recent_notice_users.each do |notice_user| %>
				    <%= link_to notice_path(notice_user.notice), class:"item future" do %>
					    <i class="large info circle middle aligned icon"></i>
					    <div class="content">
					      <div class="header"><%= notice_user.notice.body %></div>
					      <div class="description">
						      <% notice_time = Time.now.to_time.to_i - notice_user.notice.created_at.to_time.to_i %>
						      <%= (Time.parse("1/1") + notice_time).strftime("%-H時間%-M分%-S秒前") %>
					      </div>
					    </div>
				    <% end %>
				  <% end %>
				</div>
		  </div>
		  <% if user_signed_in? %>
		  	<div class="ui dropdown">
					<%= image_tag current_user.profile_photo_url, class:"ui circular right floated image user-image"%>
					<div class="menu">
            <%= link_to 'インテルネトップへ', root_path, class:"item"%>
						<%= link_to 'マイページへ', mypage_path, class:"item"%>
						<% if current_user.employment_status == false %>
							<%= link_to '会社情報', company_path(current_company), class:"item"%>
	          	<%= link_to '勤怠管理', attendances_path, class:"item"%>
						<% end %>
						<%= link_to 'ログアウト', destroy_user_session_path, method: :delete,class:"item"%>
					</div>
			  </div>
	  	<% end %>
	  </div>
  </div>
	<!-- for mobile -->
  <div class="row main-header mobile only" style="padding:0px;margin:0px;">
	  <div class="ui attached menu" style="background:#f1f5f9;">
		  <a class="item sidebar-menu" style="background:white;">
		    <i class="sidebar icon"></i>
		    Menu
		  </a>
		</div>
  </div>
</div>
</div>
