<script src="https://webkaru.net/jquery-plugin/sources/timeto/jquery.timeTo.js"></script>
<link href="https://webkaru.net/jquery-plugin/sources/timeto/timeTo.css" type="text/css" rel="stylesheet"/>

<div id="countdown" class="timeTo timeTo-white" style="font-size: 28px;"></div>
<script>
  $('#countdown').timeTo();
  </script>

<div class="ui raised segment" style="z-index:-5;">
  <h3>ステータス</h3>
  <% if @user.attendances != [] %>
  <% if @user.attendances.last.work_stopped_at.nil? %>
  <% if @user.attendances.last.break_started_at.nil? == @user.attendances.last.break_stopped_at.nil? %>
  <div class="ui grid padded stackable middle aligned">
    <div class="eight wide column center aligned">
      <div class="ui piled red segment">
        <h1>出勤中</h1></div>
      </div>
      <div class="eight wide column right floated">
        <table class="ui very basic table">
		  <tbody>
		    <tr>
		      <td class="collapsing"><i class="large history middle aligned icon"></i>本日の出勤時間</td>
		      <td><%= @today_work_schedule %></td>
		    </tr>
		    <tr>
		      <td><i class="large hourglass half middle aligned icon"></i>本日の勤務時間</td>
		      <td><%= (Time.parse("1/1") + @attendance_time).strftime("%-H時間%-M分%-S秒") %></td>
		    </tr>
		    <tr>
		      <td><i class="large moon middle aligned icon"></i>休憩時間</td>
		      <td><%= (Time.parse("1/1") + @break_time).strftime("%-H時間%-M分%-S秒") %></td>
		    </tr>
		    <tr>
		      <td><i class="large checkmark box middle aligned icon"></i>今日のタスク</td>
		      <td><%= @user.tasks.last.title %></td>
		    </tr>
		  </tbody>
		</table>
      </div>
    </div>
  <% else %>
  <div class="ui grid padded middle aligned">
    <div class="eight wide column center aligned">
      <div class="ui piled red segment">
        <h1>休憩中</h1>
      </div>
    </div>
    <h3>
      本日の出勤時間：<%= @today_work_schedule %><br>
      勤務時間：<%= (Time.parse("1/1") + @attendance_time).strftime("%-H時間%-M分%-S秒") %><br>
      休憩時間：<%= (Time.parse("1/1") + @break_time).strftime("%-H時間%-M分%-S秒") %><br>
      今日のタスク：<%= @user.tasks.last.title %><br>
    </h3>
  </div>
  <% end %>
  <% else %>
  <% #退勤中の場合 %>
  <div class="ui grid padded middle aligned stackable">
    <div class="eight wide column center aligned">
      <div class="ui piled yellow segment">
        <h1>退勤中</h1></div>
      </div>
      <div class="eight wide column right floated">
        <div class="ui middle aligned divided list">
          <div class="item">
            <i class="large announcement middle aligned icon"></i>
            <div class="content">
              <div class="header">お疲れ様でした</div>
            </div>
          </div>
          <div class="item">
            <i class="large checked calendar middle aligned icon"></i>
            <div class="content">
              <div class="header">次回出勤予定日　：　<%= @next_work_schedule %></div>
            </div>
          </div>
          <div class="item">
            <i class="large checkmark box middle aligned icon"></i>
            <div class="content">
              <div class="header">次回タスク　　　：　<%= @user.tasks.last.title %></div>
            </div>
          </div>
          <div class="item">
            <i class="large history box middle aligned icon"></i>
            <div class="content">
              <div class="header">前回勤務時間　　：　<%= (Time.parse("1/1") + @last_attendance_time).strftime("%-H時間%-M分%-S秒") %></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
    <% else %>
    <% #初回出社前の場合 %>
    <div>
      <h1>退勤中</h1>
    </div>
    <div>
      <h3>
        次回の出勤予定は、<%= @next_work_schedule %>で、<br>
        タスクは"<%= @user.tasks.last.title %>"です。<br>
      </h3>
    </div>
    <% end %>
  </div>
