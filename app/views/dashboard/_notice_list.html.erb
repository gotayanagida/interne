<div class="wrap-for-dev col-md-12">
  <h3>お知らせリスト</h3>
  <% @user.notice_users.reverse_each do |notice_user| %>
  <div class="wrap-for-dev col-md-12">
    <div class="col-md-6">
      <h4><%= notice_user.notice.body %></h4>
    </div>
    <div class="col-md-6">
      <% notice_time = Time.now.to_time.to_i - notice_user.notice.created_at.to_time.to_i %>
      <h4><%= (Time.parse("1/1") + notice_time).strftime("%-H時間%-M分%-S秒前") %></h4>
    </div>
  </div>
  <% end %>
</div>
