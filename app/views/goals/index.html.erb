      <% year = goal.created_at.year %>
      <% mouth = goal.created_at.month + 2 %>
      <% day = goal.created_at.day - 1 %>
      <%= "~#{year}年#{mouth}月#{day}日"%>
    </div>
    <div class="col-md-3">
      <%= link_to '詳細', goal ,class: "btn btn-default"%>
      <% if goal.user_id == current_user.id %>
        <%= link_to '編集', edit_goal_path(goal) ,class: "btn btn-default" %>
        <%= link_to '削除', goal, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-default" %>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
