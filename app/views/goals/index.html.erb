<p id="notice"><%= notice %></p>

<div class="col-md-12 text-right">
  <%= link_to '＋ゴールを追加', new_goal_path, class: "btn btn-primary" %>
</div>
<div class="wrap-for-dev col-md-12">
  <h3>３ヶ月目標<h3>
  <% @goals_3.each do |goal| %>
  <div class="wrap-for-dev col-md-12">
    <div class="col-md-3">
      <%= goal.title %>
    </div>
    <div class="col-md-3">
      <%= image_tag goal.user.profile_photo_url, class: "img-responsive"%>
      <%= goal.user.name %>
    </div>
    <div class="col-md-3">
      <% year = goal.created_at.year %>
      <% mouth = goal.created_at.month + 2 %>
      <% day = goal.created_at.day - 1 %>
      <%= "~#{year}年#{mouth}月#{day}日"%>
    </div>
    <div class="col-md-3">
      <%= link_to 'Show', goal %>
      <%= link_to 'Edit', edit_goal_path(goal) %>
      <%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
  <% end %>
</div>

