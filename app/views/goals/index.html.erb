<script type="text/javascript">
$(document).ready(function(){
  $('.tabular.menu .item')
  .tab()
;
});
</script>

<p id="notice"><%= notice %></p>

<div>
  <%= link_to '＋目標を追加', new_goal_path, class: "btn btn-primary" %>
</div>

<div class="ui top attached tabular menu">
  <a class="item active" data-tab="first">3ヶ月目標</a>
  <a class="item" data-tab="second">年次目標</a>
</div>
<div class="ui bottom attached tab segment active" data-tab="first">
  <table class="ui celled striped table">
  <!--<thead>
    <tr><th colspan="4">
      ３ヶ月目標
    </th>
  </tr></thead>-->
  <tbody>
  　<% @goals_3.reverse_each do |goal| %>
    <tr>
      <td class="collapsing">
        <h4 class="ui image header">
             <%= image_tag goal.user.profile_photo_url,class:"ui mini rounded image"%>
	         <div class="content">
	           <%= goal.user.name %>
	           <div class="sub header">
	           		<% year = goal.created_at.year %>
		            <% mouth = goal.created_at.month + 2 %>
		            <% day = goal.created_at.day - 1 %>
		            <%= "~#{year}年#{mouth}月#{day}日"%>
	           </div>
	       </div>
	     </h4>
      </td>
      <td><%= goal.title %></td>
      <td class="right aligned collapsing">
        <div class="ui dropdown left floated" style="display:block;display: flow-root;">
           <i class="large smile icon"></i>
           <div class="menu">
             <% stamps.each do |stamp| %>
               <%= link_to press_stamp_path(stamp_id:stamp.id,associate_type:"goal",associate_id:goal.id) do%>
                 <div class="item">
                   <%= image_tag stamp.url %>
                 </div>
               <% end %>
             <% end %>
           </div>
        </div>
      </td>
      <td class="right aligned collapsing">
        <div class="ui dropdown" style="display:block;display: flow-root;">
          <i class="large setting icon"></i>
          <div class="menu">
            <% if goal.user_id == current_user.id %>
              <%= link_to goal ,class: "item" do%>詳細<% end%>
              <%= link_to edit_goal_path(goal) ,class: "item" do%>編集<% end%>
              <%= link_to goal, method: :delete, data: { confirm: '本当に削除しますか？' } ,class: "item" do%>削除<%end%>
            <% else %>
              <%= link_to goal ,class: "item" do%>詳細<% end%>
            <% end %>
          </div>
        </div>
      </td>
    </tr>
    <%end%>
  </tbody>
</table>

