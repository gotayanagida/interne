<p id="notice"><%= notice %></p>

<div>
  <%= link_to '＋目標を追加', new_goal_path, class: "btn btn-primary" %>
</div>
<div class="ui one column grid stackable">
  <h3>３ヶ月目標</h3>
  <% @goals_3.each do |goal| %>
    <div class="column">
      <div class="ui fluid card">
        <div class="content">
          <div>
            <h4><%= goal.title %></h4>
          </div>
          <div>
            <%= image_tag goal.user.profile_photo_url%>
            <%= goal.user.name %>
          </div>
          <div>
            <% year = goal.created_at.year %>
            <% mouth = goal.created_at.month + 2 %>
            <% day = goal.created_at.day - 1 %>
            <%= "~#{year}年#{mouth}月#{day}日"%>
          </div>
          <div>
            <% goal.goal_stamps.each do |goal_stamp| %>
              <%= goal_stamp.user.name %>さん
              <%= image_tag goal_stamp.stamp.url %>
            <% end %>
          </div>
          <div>
            <div class="ui dropdown" style="display:block;display: flow-root;">
              スタンプを押す
              <div class="menu">
                <% stamps.each do |stamp| %>
                  <%= link_to press_stamp_path(stamp_id:stamp.id,associate_type:"goal",associate_id:goal.id) do%>
                    <div class="item">
                      <%= image_tag stamp.url %>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="extra content">
        　<% if goal.user_id == current_user.id %>
          <div class="three ui buttons">
            <%= link_to goal ,class: "ui basic green button" do%>詳細<% end%>
            <%= link_to edit_goal_path(goal) ,class: "ui basic blue button" do%>編集<% end%>
            <%= link_to goal, method: :delete, data: { confirm: '本当に削除しますか？' } ,class: "ui basic red button" do%>削除<%end%>
          </div>
          <% else %>
          <div class="ui buttons">
            <%= link_to goal ,class: "ui basic green button" do%>詳細<% end%>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

