<p id="notice"><%= notice %></p>

<div class="col-md-4 col-md-offset-4">
  <h3><%= @schedule.user.name %></h3>
  <h3><%= @schedule.work_started_at %></h3>
  <h3><%= @schedule.work_ended_at %></h3>
</div>

<div class="col-md-4 col-md-offset-4">
  <% if @schedule.user_id == current_user.id %>
    <%= link_to '編集', edit_schedule_path(@schedule) ,class: "btn btn-default" %>
  <% end %>
  <%= link_to '戻る', schedule_path ,class: "btn btn-default" %>
</div>
