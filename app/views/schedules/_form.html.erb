    <%= form.hidden_field :company_id, value: current_company.id %>
  </div>

  <div class="field">
    <%= form.label "勤務開始時間" %>
    <%= form.datetime_select :work_started_at, id: :schedule_work_started_at %>
  </div>

  <div class="field">
    <%= form.label "勤務終了時間" %>
    <%= form.datetime_select :work_ended_at, id: :schedule_work_ended_at %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
