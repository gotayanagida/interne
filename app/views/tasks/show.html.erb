<p id="notice"><%= notice %></p>

<div class="col-md-4 col-md-offset-4">
  <h3><%= @task.user.name %></h3>
  <h3><%= @task.title %></h3>
  <h3><%= @task.detail %></h3>
</div>

<div class="col-md-4 col-md-offset-4">
  <% if @task.user_id == current_user.id %>
    <%= link_to '編集', edit_task_path(@task) ,class: "btn btn-default" %>
  <% end %>
  <%= link_to '戻る', task_path ,class: "btn btn-default" %>
</div>
