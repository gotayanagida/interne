<div id="signin">
  <div class="ui middle aligned center aligned grid">
    <div class="column">
      <h2 class="ui image header">
        <div class="content">
          <%= image_tag 'interne.png' %>
        </div>
      </h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class:"ui large form"}) do |f| %>
        <div class="ui stacked secondary  segment">
          <div class="field">
            <div class="ui left icon input">
              <i class="user icon"></i>
              <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス"%>
            </div>
          </div>
          <div class="field">
            <div class="ui left icon input">
              <i class="lock icon"></i>
              <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード" %>
            </div>
          </div>
          <%= f.submit "ログイン", class:"ui fluid large teal submit button"%>
        </div>

        <div class="ui error message"></div>

      <% end %>

      <div class="ui message">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

<script>
$(document)
  .ready(function() {
    $('.ui.form')
      .form({
        fields: {
          email: {
            identifier  : 'email',
            rules: [
              {
                type   : 'empty',
                prompt : 'Please enter your e-mail'
              },
              {
                type   : 'email',
                prompt : 'Please enter a valid e-mail'
              }
            ]
          },
          password: {
            identifier  : 'password',
            rules: [
              {
                type   : 'empty',
                prompt : 'Please enter your password'
              },
              {
                type   : 'length[6]',
                prompt : 'Your password must be at least 6 characters'
              }
            ]
          }
        }
      })
    ;
  })
;
</script>
