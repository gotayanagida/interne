<p id="notice"><%= notice %></p>

<div class="col-md-12 text-right">
  <%= link_to '＋ユーザを追加', new_user_path, class: "btn btn-primary" %>
</div><% @users.each do |user| %>
  <div class="wrap-for-dev col-md-4">
    <div class="col-md-2">
      <%= image_tag user.profile_photo_url%>
    </div>
    <div class="col-md-10">
      <div class="col-md-12">
        <h3><%= user.name %></h3>
      </div>
      <div class="col-md-12">
        <%= user.university %> <%= user.department %> <%= user.grade %>年
      </div>
    </div>
    <div class="col-md-12">
      <% if user.goals != [] %>
        <h4>"<%= user.goals.first.title %>"<h4>
      <% else %>
        目標が登録されていません:(
      <% end %>
    </div>
    <div class="col-md-12">
      <% if user.schedules != [] %>
        <h4>次回出勤日：<%= user.schedules.first.work_started_at.strftime('%m/%d(%a) %-H:%M') %>~<h4>
      <% else %>
        次回出勤日が登録されていません:(
      <% end %>
    </div>
    <div class="col-md-12">
      <td><%= link_to 'Show', user %></td>
      <td><%= link_to 'Edit', edit_task_path(user) %></td>
      <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </div>
  </div>
<% end %>
<div class="col-md-12 text-center">
  <%= paginate @users %>
</div>
