<div class="ui grid">
  <div class="row">
    <div class="three wide column"></div>
    <div class="ten wide column">
      <%= image_tag 'interne.png',class:"ui image small",style:"width:230px;margin-top:20px;"%>
    </div>
    <div class="three wide column"></div>
  </div>
  <div class="row">
    <div class="three wide column"></div>
    <div class="ten wide column">

      <div class="ui segment">
      <%= form_for(resource, as: resource_name, url: users_confirmation_path(resource_name),html: {class: 'ui form'}) do |f| %>
        <%= f.hidden_field :confirmation_token %>

        <%= devise_error_messages! %>
        <h2 style="margin-top:10px;">パスワードを入力して登録完了！</h2>
        <table class="ui  basic table centered">
          <tbody>
            <tr>
              <td><%= f.label :パスワード %></td>
              <td>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <br>
                <% end %>
                <%= f.password_field :password, autocomplete: "off" %>
              </td>
            </tr>
          </tbody>
          <tfoot class="full-width">
            <tr>
              <th colspan="2">
                <div class="actions">
                  <%= f.submit "登録", class: "ui button right floated"%>
                </div>
              </th>
            </tr>
          </tfoot>
        </table>
      <% end %>
      </div>
    </div>
    <div class="three wide column"></div>
  </div>
</div>
